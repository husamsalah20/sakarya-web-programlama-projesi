@model InventoryBeginners.Models.Product

@{
    ViewData["Title"] = "Create";
}
@inject LanguageService language
<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white text-center" style="height:40px;">
            <h5>@language.Getkey("Create Product")</h5>
        </div>


        <!-- Form Area-->
        <form asp-action="Create" enctype="multipart/form-data" onsubmit="return ValidateForm()">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="btn-group">
                <div class="col-8">
                    <div class="row">
                        <!-- controls section -->


                        <div class="form-group col-6">
                            <label asp-for="Code" class="control-label">@language.Getkey("Code")</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="Name" class="control-label">"@language.Getkey("Name")</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="Description" class="control-label"> 
                     "@language.Getkey("Description")</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="Cost" class="control-label">@language.Getkey("Cost")</label>
                            <input asp-for="Cost" class="form-control" />
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="Price" class="control-label">@language.Getkey("Price")></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="UnitId" class="control-label">@language.Getkey("UnitId")</label>
                            <select asp-for="UnitId" class="form-control" asp-items="ViewBag.Units"></select>
                            <span asp-validation-for="UnitId" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="BrandId" class="control-label">@language.Getkey("BrandId")</label>
                            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="CategoryId" class="control-label">@language.Getkey("CategoryId")</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="ProductGroupId" class="control-label">@language.Getkey("ProductGroupId")</label>
                            <select asp-for="ProductGroupId" class="form-control" asp-items="ViewBag.ProductGroups"></select>
                            <span asp-validation-for="ProductGroupId" class="text-danger"></span>
                        </div>


                        <div class="form-group col-6">
                            <label asp-for="ProductProfileId" class="control-label">@language.Getkey("ProductProfileId")</label>
                            <select asp-for="ProductProfileId" class="form-control" asp-items="ViewBag.ProductProfiles"></select>
                            <span asp-validation-for="ProductProfileId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4 row">
                    <div class="form-group col-12 justify-content-center align-middle mb-0 pb-0">
                        <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image"
                             width="300" height="300" style="border:1px ;margin-top:30px; " />
                    </div>

                    <div class="form-group col-2 pt-0 mt-0">
                    </div>

                    <input type="hidden" asp-for="PhotoUrl" id="PhotoUrl" value="Error" />

                    <div class="form-group">
                        <span class="text-danger invisible" id="ImageError">@language.Getkey("Please choose image")</span>
                    </div>

                    <div class="form-group col-10 pt-0 mt-0">
                        <div class="custom-file">
                            <input asp-for="ProductPhoto" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">@language.Getkey("Browse Photo")</label>
                        </div>
                    </div>
                </div>

            </div>



            <div class="form-group btn-group col-10">
                <div class="col-1"></div>
                <div class="col-5">
                    <input type="submit"  class="btn btn-primary btn-block" value=@language.Getkey("Create") />
                </div>
                <div class="col-5">
                    <a class="btn btn-secondary btn-block" asp-action="index"
                       asp-route-pg="@TempData.Peek("CurrentPage")">@language.Getkey("Back")</a>
                </div>
                <div class="col-1"></div>
            </div>

        </form>


    </div>
</div>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(".custom-file-input").on("change", function () {

            document.getElementById('ImageError').classList.add("invisible");
            document.getElementById('ImageError').classList.remove("visible");

            var fsize = $(this)[0].files[0].size;

            var fileName = $(this).val().split("\\").pop();

            var fileExt = fileName.split('.').pop();


            var error = IsImageValid(fsize, fileExt);
            if (error != "") {

                document.getElementById('ImageError').innerText = error;
                document.getElementById('ImageError').classList.remove("invisible");
                document.getElementById('ImageError').classList.add("visible");
                return;
            }


            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

            document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0]);

            document.getElementById('PhotoUrl').value = fileName;

        });


        function IsImageValid(fsize, fileExt) {

            var error = "";
            error = IsExtensionValid(fileExt);

            if (error != "") {
                return error;
            }

            error = IsFileSizeValid(fsize);
            if (error != "") {
                return error;
            }

            return "";

        }

        function IsExtensionValid(fileExt) {

            if (fileExt != 'jpg' && fileExt != 'png') {
                return "Only Jpeg or Png files are Accepted";
            }

            return "";
        }

        function IsFileSizeValid(fSize) {

            var fSizeInKb = Math.round((fSize / 1024));

            if (fSizeInKb > 100) {
                return "Files Sized over 100 Kb are not Allowed";
            }

            return "";
        }

        function IsImageSelected() {

            if (document.getElementById('PhotoUrl').value == 'Error') {
                return "Image Not Selected To Upload";
            }

            return "";

        }

        function ValidateForm() {


            var error = IsImageSelected();
            if (error != "") {

                document.getElementById('ImageError').innerText = error;
                document.getElementById('ImageError').classList.remove("invisible");
                document.getElementById('ImageError').classList.add("visible");
                return false;
            }


            return true;
        }



    </script>


}
