@using Microsoft.AspNetCore.Identity
@using InventoryBeginners.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject LanguageService language
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hussam Business</title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@{ 
    string menuTextColor = "text-white";   

}
<body>

    <div class="container-fluid" style="background:linear-gradient(to right,#28340B,#197696);">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand @menuTextColor" asp-area="" asp-controller="Home" asp-action="Index"> @language.Getkey("Hussam warehouse sys.") </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
              

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-lg-start">
                        
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-area="" asp-controller="Home" asp-action="Index"> @language.Getkey("Home")</a>
                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                             
                 
                                  

                                    
                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="Unit" asp-action="Index">@language.Getkey("Units")</a>
                                        </li>

                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="Product" asp-action="Index">@language.Getkey("Products")</a>
                                        </li>

                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="Category" asp-action="Index">@language.Getkey("Categories")</a>
                                        </li>

                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="Brand" asp-action="Index">@language.Getkey("Brands")</a>
                                        </li>


                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="ProductProfile" asp-action="Index">@language.Getkey("Product Profiles")</a>
                                        </li>


                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="ProductGroup" asp-action="Index">@language.Getkey("Product Groups")</a>
                                        </li>

                                        <li class="nav-item">
                                    <a class="nav-link @menuTextColor" asp-area="" asp-controller="Supplier" asp-action="Index">@language.Getkey("Suppliers")</a>
                                        </li>


                            }

                            <li class="nav-item">
                                <a class="nav-link @menuTextColor" asp-area="" asp-controller="Home" asp-action="Privacy">@language.Getkey("Privacy")</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <partial name="_LoginPartial" />

                <div class="dropdown">
                    <button class="btn btn-light btn-secondary dropdown-toggle " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        @language.Getkey("Language")
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="Language">

                        <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="nav-link"><i class="flag-icon flag-icon-gb" data-flag="true"></i>@language.Getkey("English")</a></li>

                        <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="ar-SA" class="nav-link"><i class="flag-icon flag-icon-de" data-flag="true"></i>@language.Getkey("Arabic")</a></li>

                        <li><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="nav-link"><i class="flag-icon  flag-icon-nl" data-flag="true"></i>@language.Getkey("Turkish")</a></li>

                    </ul>
                </div>
            </nav>
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">


            <!--Success Dialog Start-->
            <div id="myModalSuccess" class="modal fade text-width:30%;" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h2>Information</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success">
                            this is a modal body. our message will appear here.
                        </div>

                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
            <!--Success Dialog End-->
            <!--Error Dialog Start-->
            <div id="myModalError" class="modal fade text-width:30%;" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h2>Error</h2>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <div id="MyModalErrorAlertBody" class="modal-body alert alert-danger">
                            this is a modal body. our message will appear here.
                        </div>

                        <div class="modal-footer">
                            &nbsp;
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        </div>

                    </div>
                </div>
            </div>
            <!--Error Dialog End-->


            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background:linear-gradient(to left,#28340B,#197696);">
        <div class="container @menuTextColor ">
            &copy; 2021 - HussamBusinessSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="@menuTextColor">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


